<h1>Listing Outbound Travels</h1>

<form action='/outbound_travels/search', method = "get">
  <%= text_field_tag :emp_id, params[:emp_id]%>
  <%= submit_tag "Search", :name => nil%>
</form>

<div>
  <%= paginate @outbound_travels%>
</div>
<table>
  <tr>
    <th>Employee Id</th>
    <th>Employee Name</th>
    <th>Place</th>
    <th>Travel Duration</th>
    <th>Payroll Effect</th>
    <th>Departure Date</th>
    <th>Return Date</th>
     </tr>

  <% @outbound_travels.each do |outbound_travel| %>
    <tr>
      <td><%= outbound_travel.emp_id %></td>
      <td><%= outbound_travel.emp_name%></td>
      <td><%= outbound_travel.place%></td>
      <td><%= outbound_travel.travel_duration%></td>
      <td><%= outbound_travel.payroll_effect%></td>
      <td><%= outbound_travel.departure_date%></td>
      <td><%= outbound_travel.return_date%></td>

      <td><%= link_to 'Show', outbound_travel %></td>
      <td><%= link_to 'Edit', edit_outbound_travel_path(outbound_travel) %></td>
      <td><%= link_to 'Destroy', outbound_travel, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
</table>
<br />
<%= link_to 'New Outbound travel', new_outbound_travel_path %>
