<html>
	<body>
		<table>
          <tr>
            <th>Employee Id</th>
            <th>Name</th>
            <th>Issue Date</th>
            <th>Amount</th>
            <th>Currency</th>
            <th>Place</th>
			<th>Amount INR</th>
           </tr>
			<tr><td colspan="7">Forex Payments</td></tr>
			<%
			forex_inr_total=0
			@expense_report.get_forex_payments.each do|payment|
			forex_inr_total += payment.inr
			%>
			<tr>
            	<td><%= payment.emp_id %></td>
	            <td><%= payment.emp_name %></td>
    	        <td><%= payment.issue_date%></td>
        	    <td><%= payment.amount%></td>
            	<td><%= payment.currency %></td>
	            <td><%= payment.place%></td>
				<td><%= payment.inr%></td>
			</tr>
			<% end %>
			<tr>
				<td colspan="6">Total</td>
				<td><%=forex_inr_total%></td>
			</tr>
		</table>
	 	<table>
			<tr>
				<th>Expense Report ID</th>
				<th>Description</th>
				<th>Currency</th>
				<th>Amount</th>
				<th>Conversion Rate</th>
				<th>Amount in INR</th>
			</tr>
			<tr><td colspan="6">Expenses</td></tr>
			<%
			expense_inr_total=0
			@expense_report.consolidated_expenses.each do|expense|
			expense_inr_total += expense["local_currency_amount"]
			%>
				<tr>
					<td><%=expense["report_id"]%></td>
					<td></td>
					<td><%=expense["currency"]%></td>
					<td><%=expense["amount"]%></td>
					<td><%=expense["conversion_rate"]%></td>
					<td><%=expense["local_currency_amount"]%></td>
				</tr>
			<% end %>
			<tr>
				<td colspan="5">Total</td>
				<td><%=(expense_inr_total*100).round.to_f/100%></td>
			</tr>
	
		</table>	
	</body>
</html>
