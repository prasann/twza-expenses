<html>
<head>
	<%= stylesheet_link_tag "bootstrap" %>
</head>
<body>
<br/>
<div>
<%= form_tag({:controller => "expense_report", :action => "fetch"}, :method => "get") do%>
 <label for="empl_id">Fetch expenses for:</label>
	<input name="empl_id"/>
 <input type="submit" value="Fetch"/>
<% end %>
</div>
<% if @expenses %>
<div>Expenses</div>
<table>
<tr>
	<th>Expense Report Id</th>
	<th>Project Code</th>
	<th>Expense Date</th>
	<th>Expense Type</th>
	<th>Description</th>
	<th>Amount</th>
	<th>Payment Type</th>
</tr>
<%@expenses.each do |expense|%>
	<tr>
		<td><%=expense.expense_rpt_id%></td>		
		<td><%=expense.project%></td>		
		<td><%=expense.expense_date%></td>		
		<td><%=expense.expense_type%></td>		
		<td><%=expense.description%></td>		
		<td><%=expense.original_cost%> <%=expense.original_currency%></td>
		<td><%=expense.payment_type%></td>		
	</tr>
<% end %>
</table>
<% end %>
</body>

</html>
