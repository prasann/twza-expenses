<html>
	<body>
		<div>For travel <%=@expense_report.travel_id%> of Employee <%=@expense_report.empl_id%></div>
		<div>Forex</div>
		<table>
          <tr>
            <th>Employee Id</th>
            <th>Name</th>
            <th>Issue Date</th>
            <th>Amount</th>
            <th>Currency</th>
            <th>Place</th>
           </tr>
 			<%@expense_report.forex_payments.each do|payment|%>
			<tr>
            	<td><%= payment.emp_id %></td>
	            <td><%= payment.emp_name %></td>
    	        <td><%= payment.issue_date%></td>
        	    <td><%= payment.amount%></td>
            	<td><%= payment.currency %></td>
	            <td><%= payment.place%></td>
			</tr>
			<% end %>
        </table>

		<div>Expenses</div>
		<table>
		<tr>
			<th>Expense Report Id</th>
			<th>Project Code</th>
			<th>Expense Date</th>
			<th>Expense Type</th>
			<th>Description</th>
			<th>Amount</th>
			<th>Payment Type</th>
		</tr>
		<%@expense_report.expenses.each do|expense|%>
		<tr>
			<td><%=expense.expense_rpt_id%></td>		
			<td><%=expense.project%></td>		
			<td><%=expense.expense_date%></td>		
			<td><%=expense.expense_type%></td>		
			<td><%=expense.description%></td>		
			<td><%=expense.original_cost%> <%=expense.original_currency%></td>
			<td><%=expense.payment_type%></td>		
		</tr>
		<% end %>
		</table>
	</body>
</html>
