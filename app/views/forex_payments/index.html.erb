<h1>Forex Payments</h1>

<form action='/forex_payments/search', method = "get">
  <%= label_tag 'Employee Id' %>:-
  <%= text_field_tag :emp_id, params[:emp_id]%></br>
  <%= label_tag 'Employee Name' %>:-
  <%= text_field_tag :name, params[:name], :class => 'emp_name' %></br>
  <%= submit_tag "Search", :name => nil%>
</form>
<div>
  <%= paginate @forex_payments%>
</div>
<table>
  <tr>
    <th>Employee Id</th>
    <th>Name</th>
    <th>Issue Date</th>
    <th>Amount</th>
    <th>Currency</th>
    <th>Place</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @forex_payments.each do |payment| %>
    <tr>
      <td><%= payment.emp_id %></td>
      <td><%= payment.emp_name %></td>
      <td><%= payment.issue_date%></td>
      <td><%= payment.amount%></td>
      <td><%= payment.currency %></td>
      <td><%= payment.place%></td>

      <td><%= link_to 'Show', payment %></td>
      <td><%= link_to 'Edit',edit_forex_payment_path(payment) %></td>
      <td><%= link_to 'Destroy', payment, confirm: 'Are you sure?', method: :delete %></td>

    </tr>
  <% end %>
</table>
<%= link_to 'New Outbound travel', new_forex_payment_path %>
